---
import Divider from "../bases/divider.astro";
const { article, index } = Astro.props;

const coverImage = article.image?.url;
const categories = article.categories ?? [];

---

<article class="col-span-1 group max-w-sm mx-auto flex flex-col gap-2 h-full relative isolate">
  <a href={`/articles/${article.slug.current}`} class="block relative">
    <div class="aspect-video overflow-hidden rounded-md bg-gray-100">
      {coverImage ? (
        <img
          src={coverImage}
          alt={article.image?.alt || article.title}
          loading={index < 3 ? "eager" : "lazy"}
          class="w-full h-full object-cover"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center text-xs text-gray-500">
          No image available
        </div>
      )}
    </div>

    <div class="flex flex-col flex-1 pt-2">
      <h3 class="text-xl font-serif font-semibold lg:group-hover:underline line-clamp-2">
        {article.title}
      </h3>

      <p class="text-sm text-base-content/80 line-clamp-3 text-pretty lg:mb-auto">
        {article.description}
      </p>

      {categories.length > 0 && (
        <div class="mt-2 flex flex-wrap gap-1">
          {categories.map((cat, index) => (
            <a
              href={`/categories/${cat.slug}`}
              class="text-blue-600 font-semibold hover:underline text-xs"
              onclick="event.stopPropagation()"
            >
              {cat.title}{index < categories.length - 1 ? ',' : ''}
            </a>
          ))}
        </div>
      )}
    </div>
  </a>
</article>